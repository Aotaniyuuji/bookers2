<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user_info.get_profile_image(100,100) %>
      <h4>name</h4>
        <%= @user_info.name %>
      <h4>introduction</h4>
        <%= @user_info.introduction %>
      <% if @user == current_user %>
        <%= link_to '編集', edit_user_path(current_user.id) %>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: book do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>