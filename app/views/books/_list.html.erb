    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user_info.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user_info.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user_info.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2>New book</h2>
      <%= form_with model: book do |f| %>
        <label>Title</label>
          <%= f.text_field :title, class:"form-control book_title" %>
        <label>Opinion</label>
          <%= f.text_area :body, class:"form-control book_title" %>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
