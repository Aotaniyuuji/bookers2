<% books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <p><%= image_tag 'no_image.jpg' %></p>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
  <p><%= book.user.name %></p>
</div>
<% end %>

  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>