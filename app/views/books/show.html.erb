<div class="container">
  <div class="row">
    <%= render 'list', book: @book_new %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to "#{@book.user.name}",user_path(@book.user.id) %>
            </td>
            <td><%= link_to "#{@book.title}",book_path %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "edit",edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "destroy",book_path(@book), method: :delete,class:"btn btn-sm btn-danger",data:{confirm: "本当に消しますか？"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>