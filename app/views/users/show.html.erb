<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |book| %>
              <td><%= link_to image_tag book.user.get_profile_image(100,100) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>