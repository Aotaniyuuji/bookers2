
<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <p><%= image_tag 'no_image.jpg' %></p>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
  <p><%= book.user.name %></p>
</div>
<% end %>

<%= render 'books/list', book: @book %>