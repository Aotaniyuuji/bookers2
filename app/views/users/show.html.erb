<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table tavle-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <% @books.each do |book| %>
          <div>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <p><%= image_tag 'no_image.jpg' %></p>
            <%= link_to book_path(book.id) do %>
              <p><%= book.title %></p>
            <% end %>
            <p><%= book.body %></p>
            <p><%= book.user.name %></p>
          </div>
          <% end %>
      </table>
    </div>
  </div>
</div>